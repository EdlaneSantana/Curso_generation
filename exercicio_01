programa {
inclua biblioteca Matematica -->Mat
  funcao inicio() {

// Primeira Questão
    real salario, abono, novoSalario

    escreva("Digite o Salário: $")
    leia(salario)

    escreva("\nDigite o Abono: $")
    leia(abono)

    novoSalario = salario + abono
    escreva("\nO Novo Salário é: $", novoSalario)

// Segunda Questão
  real nota1, nota2, nota3, nota4, media

  escreva("\nDigite a primeira nota: ")
  leia(nota1)

  escreva("\nDigite a segunda nota: ")
  leia(nota2)

  escreva("\nDigite a terceira nota: ")
  leia(nota3)

  escreva("\nDigite a quarta nota: ")
  leia(nota4)

  media = (nota1 + nota2 + nota3+ nota4)/4
  escreva("\nA média final é: ", (Mat.arredondar(media,1))

//Terceira Questão
    real salarioBruto, adicionalNoturno, horasExtras, desconto, salarioLiquido

    escreva("\nDigite o Salário: $")
    leia(salarioBruto)

    escreva("\nDigite o valor do Adicional Noturno: $")
    leia(adicionalNoturno)

    escreva("\nDigite a quantidade de Horas Extras: ")
    leia(horasExtras)

    escreva("\nDigite o valor do Desconto: $")
    leia(desconto)

    salarioLiquido = (salarioBruto + adicionalNoturno +(horasExtras * 5) - desconto)
    escreva("\nO Salário Líquido é: $",salarioLiquido)

//Quarta Questão
  inteiro numero1, numero2, numero3, numero4, diferenca

    escreva("\nDigite o primeiro número: ")
    leia(numero1)

    escreva("\nDigite o segundo número: ")
    leia(numero2)

    escreva("\nDigite o terceiro número: ")
    leia(numero3)

    escreva("\nDigite o quarto número: ")
    leia(numero4)

    diferenca = (numero1 * numero2) - (numero3 * numero4)
    escreva("\nA Diferença é: ",diferenca)

  }
}
